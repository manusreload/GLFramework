<!DOCTYPE html>
<html lang="en">
<head>

    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="favicon.ico">

        <title>{% block title %}{% endblock %} {{ mainconfig.app.name }}</title>
        <!-- Latest compiled and minified CSS -->
        {{ css("assets/css/font-awesome.min.css") }}
        {{ css("assets/css/bootstrap.min.css")  }}
        <!-- Custom styles for this template -->
        {{ css("assets/css/navbar-static-top.css") }}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        {{ fire('displayStyle', [render ]) | raw }}
        {% block styles %}{% endblock %}
    {% endblock %}
</head>

<body>
{% if simple is null %}
    {% include "components/menu.twig" with {menu: block('menu'), header: block('header')} %}
{% endif %}

<div class="container">

    {% include "components/messages.twig" %}

    {% block body %}{% endblock %}

</div> <!-- /container -->


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Latest compiled and minified JavaScript -->
{{ js("assets/js/jquery.min.js") | raw }}
{{ js("assets/js/bootstrap.min.js") | raw }}
{% block scripts %}{% endblock %}

{{ fire('displayScripts', [render ]) | raw }}
</body>
</html>
