{% set simple = "true" %}
{% extends "templates/base.twig" %}

{% block title %}Recuperar cuenta{% endblock %}
{% block body %}
    <form class="form-signin" name="form1" method="post" action="{{ this.getLink(this, {token: this.params.token}) }}">

        <h3 class="form-signin-heading">Actualizar su contrase単a</h3>
        <p>
            Hemos verificado que usted es el propietario de esta cuenta mediante el email, ahora puede establecer una contrase単a nueva para su cuenta.
        </p>
        <input name="password" id="password" type="password" class="form-control" typeof="" placeholder="Contrase単a nueva" autofocus>
        <br>
        <input name="password2" id="password2" type="password" class="form-control" typeof="" placeholder="Repetir Contrase単a">
        <p></p>

        <button name="save" id="submit" class="btn btn-lg btn-primary btn-block" type="submit">Actualizar</button>

